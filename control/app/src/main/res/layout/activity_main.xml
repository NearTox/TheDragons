<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
    android:orientation="vertical"
  android:layout_height="match_parent"
  tools:context="com.thedragons.control.MainActivity">


    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="160dp"
      app:cardUseCompatPadding="true"
      android:id="@+id/cocina">


        <Switch
          android:text="ON/OFF"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:layout_marginLeft="10dp"
          android:id="@+id/cocina_on" />

        <ImageView
          android:layout_width="131dp"
          android:layout_height="match_parent"
          android:layout_gravity="left"
          android:src="@drawable/cocina_sala"
          android:id="@+id/cocina_img" />

        <Button
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="260dp"
          android:layout_marginRight="100dp"
          android:layout_marginTop="10dp"
          android:background="@color/colorVerde"
          android:id="@+id/cocina_verde" />

        <Button
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="260dp"
          android:layout_marginRight="100dp"
          android:layout_marginTop="50dp"
          android:background="@color/colorAzul"
          android:id="@+id/cocina_azul" />

        <Button
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="260dp"
          android:layout_marginRight="100dp"
          android:layout_marginTop="90dp"
          android:background="@color/colorAmarillo"
          android:id="@+id/cocina_amarillo" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="160dp"
      android:id="@+id/sala"
      app:cardUseCompatPadding="true">

        <Switch
          android:text="ON/OFF"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:layout_marginLeft="10dp"
          android:id="@+id/sala_on" />

        <ImageView
          android:layout_width="131dp"
          android:layout_height="match_parent"
          android:layout_gravity="left"
          android:src="@drawable/sala_off"
          android:id="@+id/sala_img" />

        <Button
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="260dp"
          android:layout_marginRight="100dp"
          android:layout_marginTop="10dp"
          android:background="@color/colorVerde"
          android:id="@+id/sala_verde" />

        <Button
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="260dp"
          android:layout_marginRight="100dp"
          android:layout_marginTop="50dp"
          android:background="@color/colorAzul"
          android:id="@+id/sala_azul" />

        <Button
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="260dp"
          android:layout_marginRight="100dp"
          android:layout_marginTop="90dp"
          android:background="@color/colorAmarillo"
          android:id="@+id/sala_amarillo" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="160dp"
      app:cardUseCompatPadding="true"
      android:id="@+id/dormitorio">


        <Switch
          android:text="ON/OFF"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:layout_marginLeft="10dp"
          android:id="@+id/dormitorio_on" />

        <ImageView
          android:layout_width="131dp"
          android:layout_height="match_parent"
          android:layout_gravity="left"
          android:src="@drawable/dormitorio_off"
          android:id="@+id/dormitorio_img" />

        <Button
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="260dp"
          android:layout_marginRight="100dp"
          android:layout_marginTop="10dp"
          android:background="@color/colorVerde"
          android:id="@+id/dormitorio_verde" />

        <Button
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="260dp"
          android:layout_marginRight="100dp"
          android:layout_marginTop="50dp"
          android:background="@color/colorAzul"
          android:id="@+id/dormitorio_azul" />

        <Button
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="260dp"
          android:layout_marginRight="100dp"
          android:layout_marginTop="90dp"
          android:background="@color/colorAmarillo"
          android:id="@+id/dormitorio_amarillo" />
    </android.support.v7.widget.CardView>


</LinearLayout>
