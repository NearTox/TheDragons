<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.thedragons.control.MainActivity">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
      android:id="@+id/cocina"
      android:layout_width="match_parent"
      android:layout_height="160dp"
      app:cardUseCompatPadding="true">

      <ImageView
        android:id="@+id/cocina_img"
        android:layout_width="131dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:src="@drawable/cocina_sala"/>

      <Switch
        android:id="@+id/cocina_on"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="ON/OFF"/>

      <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical">

        <Button
          android:id="@+id/cocina_verde"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:background="@color/colorVerde"/>

        <Button
          android:id="@+id/cocina_azul"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="-10dp"
          android:background="@color/colorAzul"/>

        <Button
          android:id="@+id/cocina_amarillo"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="-10dp"
          android:background="@color/colorAmarillo"/>

      </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:id="@+id/sala"
      android:layout_width="match_parent"
      android:layout_height="160dp"
      app:cardUseCompatPadding="true">

      <ImageView
        android:id="@+id/sala_img"
        android:layout_width="131dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:src="@drawable/sala_off"/>

      <Switch
        android:id="@+id/sala_on"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="ON/OFF"/>


      <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical">

        <Button
          android:id="@+id/sala_verde"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="-10dp"
          android:background="@color/colorVerde"/>

        <Button
          android:id="@+id/sala_azul"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:background="@color/colorAzul"/>

        <Button
          android:id="@+id/sala_amarillo"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="-10dp"
          android:background="@color/colorAmarillo"/>

      </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:id="@+id/dormitorio"
      android:layout_width="match_parent"
      android:layout_height="160dp"
      app:cardUseCompatPadding="true">

      <ImageView
        android:id="@+id/dormitorio_img"
        android:layout_width="131dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:src="@drawable/dormitorio_off"/>

      <Switch
        android:id="@+id/dormitorio_on"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="ON/OFF"/>


      <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical">
        <Button
          android:id="@+id/dormitorio_verde"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:background="@color/colorVerde"/>

        <Button
          android:id="@+id/dormitorio_azul"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="-10dp"
          android:background="@color/colorAzul"/>

        <Button
          android:id="@+id/dormitorio_amarillo"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="-10dp"
          android:background="@color/colorAmarillo"/>
      </LinearLayout>
    </android.support.v7.widget.CardView>

  </LinearLayout>
</ScrollView>